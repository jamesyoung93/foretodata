---
import Base from '../layouts/Base.astro';
import FilterToggle from '../components/FilterToggle.jsx';
---

<Base title="James Young | ML & AI Expert">
  <!-- Sidebar Navigation -->
  <Fragment slot="sidebar">
    <div class="nav-section">
      <h2 class="nav-section-title">Explore</h2>
      <ul class="nav-list">
        <li>
          <a href="#work" class="nav-link active">
            <span class="num">01</span>
            <span>Work & Projects</span>
          </a>
        </li>
        <li>
          <a href="/foretodata/posts" class="nav-link">
            <span class="num">02</span>
            <span>Writing</span>
          </a>
        </li>
        <li>
          <a href="/foretodata/about" class="nav-link">
            <span class="num">03</span>
            <span>About</span>
          </a>
        </li>
      </ul>
    </div>
    
    <div class="nav-section">
      <h2 class="nav-section-title">Quick Links</h2>
      <ul class="nav-list">
        <li>
          <a href="https://www.linkedin.com/in/jamesyoungsd/" target="_blank" rel="noopener" class="nav-link">
            <span>↗</span> LinkedIn
          </a>
        </li>
        <li>
          <a href="/foretodata/newsletter" class="nav-link">
            <span>✉</span> Newsletter
          </a>
        </li>
      </ul>
    </div>
  </Fragment>

  <!-- Main Content -->
  <div class="content-wrapper">
    <!-- Hero Section -->
    <header style="margin-bottom: 3rem;">
      <h1 class="hero-title">
        Exploring What's Next<br/>
        <span class="accent">in ML and AI</span>
      </h1>

      <pre class="ascii-art" aria-hidden="true">
 ______          _            _          _       
|  ____|        | |          | |        | |      
| |__ ___  _ __ | |_ ___  ___| |_  ___  | | ___  
|  __/ _ \| '_ \| __/ _ \/ __| __|/ _ \ | |/ _ \ 
| | | (_) | | | | ||  __/\__ \ |_| (_) || |  __/ 
|_|  \___/|_| |_|\__\___||___/\__|\___(_)_|\___| 
      </pre>
      
      <p class="hero-description">
        I build machine learning systems that drive measurable business outcomes—from 
        revenue optimization to operational automation. Here's what I've shipped.
      </p>
    </header>

    <!-- Filter Toggle Section -->
    <section id="work">
      <h2 class="section-title">Most recent work</h2>
      <div class="section-header">
        <span class="section-path">~/projects</span>
        <div class="section-line"></div>
      </div>
      
      <FilterToggle client:load />
    </section>

  </div>
</Base>
